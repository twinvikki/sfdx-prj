<apex:page renderAs="PDF" controller="PharmaProductExtension" showHeader="false" sidebar="false" applyBodyTag="True">
 <style type="text/css">
            .table { display: table; width:100%; border:1px solid black; margin-top:.25in;}
	    .row { display: table-row; }
	    .cell { display: table-cell; border-top:1px solid black;}
 </style>
 <apex:stylesheet value="{!$Resource.PdfStylingPharma}"/>
    <apex:sectionHeader title="PDF Format" subtitle="{!PName}"/>
 <div class="header"> 
    <div align="right">
     <strong>Date</strong>: {!Day(Today())} {!Case(Month(Today()),1,'January',2,'February',3,'March',4,'April',5,'May',6,'June',7,'July',8,'August',9,'September',10,'October',11,'November',12,'December','Unknown')} {!Year(Today())}
    </div>
    <div align="right"><strong>Generated By</strong>: {!$User.FirstName} {!$User.LastName}
    </div>
    <div align="right"><strong>Mail Id</strong>: {!$User.Email}
    </div>
 </div>
    <!-- <div class="footer" align="bottom">
    All rights for this Page belongs to © <em>Vikranth</em> <!-- alt +0169 for ©  alt +0174 for ®
    </div> -->
 <div style="border:1px Solid #6699CC; padding:10px 10px;">   
	<center>
		<h3>{!PName} Detail PDF Format</h3>
	</center>

   <apex:pageBlock rendered="{!Wrapperlist.size>0}">    
     <p style="padding:10px 10px;">
         Deatils of {!PName} used as Sample.<br/>
                       Complete details of the FR's and Visit's 
     </p>
      <table align="center" style="border:1px groove #6699CC; padding:10px 10px;">               
                  <tr>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Sample Record Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Quantity</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Visit</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Hospital Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Hospital Geo region</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">FR Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">FR Email</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">FR Contact</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Visit Date</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">FeedBack</th>
                  </tr>              
                   <apex:repeat value="{!Wrapperlist}" var="wrapperItem" >
                        <tr>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.samRecord.name}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.samRecord.Quantity__c}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.samRecord.Visit__c}"/> </td>                                                     
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.hospitalteam.name}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.hospitalteam.Geo_Region__c}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.salesteam.name}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.salesteam.Email__c}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.salesteam.Phone__c}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.visitdet.Visit_Date__c}"/> </td>
                            <td style=" text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.visitdet.Feedback__c}"/> </td>
                        </tr>
                    </apex:repeat>
         </table>
     </apex:pageBlock>
     <apex:pageBlock rendered="{!WrapperSecondlist.size>0}">
      <p style="padding:10px 10px;">
        All Invoices Details related to {!PName} <br/>
     </p>
      <table align="center" style="border:1px groove #6699CC; padding:10px 10px;border-collapse:collapse;">               
                  <tr>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Pharma Invoice Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Invoice Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Amount</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Amount After Discount</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Hospital Name</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Invoice Date</th>
                   <th style="border: 1px solid black; text-align:center; padding: 15px;">Invoice Reg Number</th>
                  </tr>              
                   <apex:repeat value="{!WrapperSecondlist}" var="wrapperItem" >
                        <tr>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.PharmaInvoice.name}"/> </td>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.name}"/> </td>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.Amount__c}"/> </td>                                                     
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.Amount_After_Discount__c}"/> </td>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.Hospital__c}"/> </td>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.Invoice_Date__c}"/> </td>
                            <td style="border: 1px solid black; text-align:center; padding: 15px;">
                            <apex:outputField value="{!wrapperItem.Inv.Invoice_Reg_Number__c}"/> </td>
                        </tr>
                    </apex:repeat>
         </table>
      </apex:pageBlock>
    </div>
</apex:page>